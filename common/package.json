{
    "name": "@recursyve/nestjs-common",
    "version": "11.0.0",
    "description": "Recursyve's NestJs common library",
    "main": "index.js",
    "scripts": {
        "build": "rimraf dist && nest build",
        "build:lib": "rimraf dist && nest build -p tsconfig.lib.json",
        "copy:lib": "cp package.json .npmignore dist",
        "pack:lib": "npm run build:lib && cd dist && npm pack",
        "publish-package": "npm run build:lib && npm run copy:lib && npm publish ./dist --access public",
        "publish-package:beta": "npm run publish-package -- --tag beta --access public",
        "publish-package:dry-run": "npm run publish-package -- --dry-run"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Recursyve/nestjs-librairies/common"
    },
    "author": "Recursyve",
    "license": "MIT",
    "peerDependencies": {
        "@nestjs/common": ">=11.0.0",
        "@nestjs/core": ">=11.0.0",
        "@nestjs/platform-express": ">=11.0.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.0 || ^0.14.0",
        "date-fns": "^4.1.0"
    },
    "devDependencies": {
        "@nestjs/common": "^11.0.12",
        "@nestjs/core": "^11.0.12",
        "@types/express": "^5.0.1",
        "@types/multer": "^1.4.12",
        "@types/node": "^22.13.13",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "date-fns": "^4.1.0",
        "reflect-metadata": "^0.2.2",
        "rimraf": "^6.0.1",
        "rxjs": "^7.8.2",
        "typescript": "^5.8.2"
    }
}
