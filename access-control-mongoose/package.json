{
    "name": "@recursyve/nestjs-access-control-mongoose",
    "version": "9.0.0-beta.6",
    "description": "Mongoose utilities for Recursyve's NestJs AccessControl library",
    "main": "index.js",
    "scripts": {
        "watch": "gulp",
        "build": "gulp build",
        "build:lib": "gulp build-lib",
        "lint": "gulp lint",
        "publish-package": "npm run build:lib && npm publish ./dist --access public",
        "publish-package:beta": "npm run publish-package -- --tag beta --access public",
        "publish-package:dry-run": "npm run publish-package -- --dry-run"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Recursyve/nestjs-librairies/access-control-mongoose"
    },
    "author": "Recursyve",
    "license": "MIT",
    "peerDependencies": {
        "@nestjs/common": ">=9.0.0",
        "@nestjs/core": ">=9.0.0",
        "@nestjs/mongoose": ">=9.0.0",
        "@recursyve/nestjs-access-control": ">=9.0.0-beta.4",
        "mongoose": ">=7.0.0"
    },
    "devDependencies": {
        "@nestjs/common": "^9.0.8",
        "@nestjs/core": "^9.0.8",
        "@nestjs/cqrs": "^9.0.1",
        "@nestjs/mongoose": "^9.2.2",
        "@nestjs/terminus": "^9.1.4",
        "@nestjs/testing": "^9.2.1",
        "@recursyve/eslint-config-node": "^1.0.1",
        "@recursyve/nestjs-access-control": "^9.0.0-beta.5",
        "@recursyve/nestjs-redis": "^9.0.0",
        "@types/jest": "^29.2.5",
        "@typescript-eslint/eslint-plugin": "^5.48.0",
        "@typescript-eslint/parser": "^5.48.0",
        "eslint": "^8.31.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-prettier": "^4.2.1",
        "gulp": "^4.0.2",
        "gulp-copy": "^4.0.1",
        "gulp-sourcemaps": "^3.0.0",
        "gulp-typescript": "^6.0.0-alpha.1",
        "jest": "^29.3.1",
        "mongoose": "^7.5.4",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.0",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "tests",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "./coverage",
        "testEnvironment": "node"
    }
}
