{
    "name": "@recursyve/nestjs-sequelize-utils",
    "version": "8.0.2",
    "description": "Sequelize utilities for NestJs",
    "main": "index.js",
    "scripts": {
        "watch": "gulp",
        "build": "gulp build",
        "build:lib": "gulp build-lib",
        "lint": "gulp lint",
        "publish-package": "npm run build:lib && npm publish ./dist --access public",
        "publish-package:beta": "npm run publish-package -- --tag beta --access public",
        "publish-package:dry-run": "npm run publish-package -- --dry-run"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Recursyve/nestjs-librairies/sequelize-utils"
    },
    "author": "Recursyve",
    "license": "MIT",
    "peerDependencies": {
        "@nestjs/common": ">=8.0.0",
        "@nestjs/core": ">=8.0.0",
        "@nestjs/sequelize": ">=8.0.0",
        "sequelize": ">=6.0.0",
        "sequelize-typescript": ">=2.1.0"
    },
    "devDependencies": {
        "@nestjs/common": "^9.0.8",
        "@nestjs/core": "^9.0.8",
        "@nestjs/sequelize": "^9.0.0",
        "@nestjs/testing": "^9.0.8",
        "@recursyve/eslint-config-node": "^1.0.1",
        "@types/jest": "^28.1.6",
        "@typescript-eslint/eslint-plugin": "^5.32.0",
        "@typescript-eslint/parser": "^5.32.0",
        "eslint": "^8.21.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "gulp": "^4.0.2",
        "gulp-copy": "^4.0.1",
        "gulp-sourcemaps": "^3.0.0",
        "gulp-typescript": "^6.0.0-alpha.1",
        "jest": "^28.1.3",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.5.6",
        "sequelize": "^6.21.6",
        "sequelize-typescript": "^2.1.5",
        "sqlite3": "^5.0.11",
        "ts-jest": "^28.0.7",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "tests",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "./coverage",
        "testEnvironment": "node"
    }
}
