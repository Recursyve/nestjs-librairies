{
    "name": "@recursyve/nestjs-config-sequelize",
    "version": "11.0.0",
    "scripts": {
        "build": "rimraf dist && nest build",
        "build:lib": "rimraf dist && nest build -p tsconfig.lib.json",
        "copy:lib": "cp package.json .npmignore dist",
        "pack:lib": "npm run build:lib && cd dist && npm pack",
        "test": "jest",
        "publish-package": "npm run build:lib && npm run copy:lib && npm publish ./dist --access public",
        "publish-package:beta": "npm run publish-package -- --tag beta --access public",
        "publish-package:dry-run": "npm run publish-package -- --dry-run"
    },
    "peerDependencies": {
        "@nestjs/common": ">=11.0.0",
        "@nestjs/core": ">=11.0.0",
        "@nestjs/sequelize": ">=11.0.0",
        "@recursyve/nestjs-config": "^11.0.0",
        "sequelize": "^6.37.6",
        "sequelize-typescript": "^2.1.6"
    },
    "devDependencies": {
        "@nestjs/common": "^11.0.12",
        "@nestjs/core": "^11.0.12",
        "@nestjs/sequelize": "^11.0.0",
        "@nestjs/testing": "^11.0.12",
        "@recursyve/nestjs-config": "^11.0.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.13.13",
        "class-transformer": "^0.5.1",
        "jest": "^29.7.0",
        "rimraf": "^6.0.1",
        "rxjs": "^7.8.2",
        "sequelize": "^6.37.6",
        "sequelize-typescript": "^2.1.6",
        "sqlite3": "^5.1.7",
        "ts-jest": "^29.3.0",
        "typescript": "^5.8.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "./coverage",
        "testEnvironment": "node"
    }
}
