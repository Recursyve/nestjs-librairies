{
    "name": "@recursyve/nestjs-config",
    "version": "8.2.0",
    "scripts": {
        "watch": "gulp",
        "build": "gulp build",
        "build:lib": "gulp build-lib",
        "pack:lib": "npm run build:lib && cd dist && npm pack",
        "lint": "gulp lint",
        "test": "jest",
        "publish-package": "npm run build:lib && npm publish ./dist --access public",
        "publish-package:beta": "npm run publish-package -- --tag beta --access public",
        "publish-package:dry-run": "npm run publish-package -- --dry-run"
    },
    "peerDependencies": {
        "@nestjs/common": ">=8.0.0",
        "@nestjs/core": ">=8.0.0",
        "reflect-metadata": "^0.1.13",
        "class-transformer": "^0.5.1"
    },
    "devDependencies": {
        "@nestjs/common": "^8.2.6",
        "@nestjs/core": "^8.2.6",
        "@nestjs/testing": "^8.2.6",
        "@types/jest": "^29.5.0",
        "gulp": "^4.0.2",
        "gulp-copy": "^4.0.1",
        "gulp-sourcemaps": "^3.0.0",
        "gulp-typescript": "^6.0.0-alpha.1",
        "jest": "^29.5.0",
        "reflect-metadata": "^0.1.13",
        "ts-jest": "^29.1.0",
        "typescript": "^4.5.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "./coverage",
        "testEnvironment": "node"
    }
}
