{
    "name": "@recursyve/nestjs-data-filter",
    "version": "11.0.0",
    "description": "NestJs DataFilter library",
    "main": "index.js",
    "scripts": {
        "build": "rimraf dist && nest build",
        "build:lib": "rimraf dist && nest build -p tsconfig.lib.json",
        "copy:lib": "cp package.json .npmignore dist",
        "pack:lib": "npm run build:lib && cd dist && npm pack",
        "publish-package": "npm run build:lib && npm run copy:lib && npm publish ./dist --access public",
        "publish-package:beta": "npm run publish-package -- --tag beta --access public",
        "publish-package:dry-run": "npm run publish-package -- --dry-run"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Recursyve/nestjs-librairies/data-filter"
    },
    "author": "Recursyve",
    "license": "MIT",
    "peerDependencies": {
        "@nestjs/common": ">=11.0.0",
        "@nestjs/core": ">=11.0.0",
        "@recursyve/nestjs-common": ">=11.0.0",
        "date-fns": "^4.1.0",
        "date-fns-tz": "^3.2.0",
        "sequelize": ">=6.37.0",
        "sequelize-typescript": ">=2.1.0"
    },
    "dependencies": {
        "csv-stringify": "^6.5.2",
        "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.3/xlsx-0.20.3.tgz"
    },
    "devDependencies": {
        "@nestjs/common": "^11.0.12",
        "@nestjs/core": "^11.0.12",
        "@nestjs/testing": "^11.0.12",
        "@recursyve/nestjs-common": "^11.0.0",
        "@types/express": "^5.0.1",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.13.13",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "date-fns": "^4.1.0",
        "date-fns-tz": "^3.2.0",
        "express": "^5.0.1",
        "jest": "^29.7.0",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.2",
        "sequelize": "^6.37.6",
        "sequelize-typescript": "^2.1.6",
        "sqlite3": "^5.1.7",
        "ts-jest": "^29.3.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "lib",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "./coverage",
        "testEnvironment": "node"
    }
}
