{
    "name": "@recursyve/nestjs-config",
    "version": "7.0.0",
    "scripts": {
        "watch": "gulp",
        "build": "gulp build",
        "build:lib": "gulp build-lib",
        "lint": "gulp lint",
        "publish-package": "npm run build:lib && npm publish dist --access public",
        "publish-package:beta": "npm run publish-package -- --tag beta --access public",
        "publish-package:dry-run": "npm run publish-package -- --dry-run"
    },
    "peerDependencies": {
        "@nestjs/common": ">= 7.0.0",
        "@nestjs/core": ">= 7.0.0",
        "class-transformer": ">= 0.2.0",
        "reflect-metadata": ">= 0.1.13",
        "rxjs": ">= 6.0.0"
    },
    "devDependencies": {
        "@nestjs/common": ">= 7.0.0",
        "@nestjs/core": ">= 7.0.0",
        "@nestjs/testing": "^7.5.5",
        "@types/jest": "^26.0.15",
        "gulp": "^4.0.2",
        "gulp-copy": "^4.0.1",
        "gulp-sourcemaps": "^2.6.5",
        "gulp-typescript": "^5.0.1",
        "jest": "^26.6.3",
        "reflect-metadata": ">= 0.1.13",
        "rxjs": ">= 6.0.0",
        "ts-jest": "^26.4.4",
        "typescript": "^4.1.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "./coverage",
        "testEnvironment": "node"
    }
}
